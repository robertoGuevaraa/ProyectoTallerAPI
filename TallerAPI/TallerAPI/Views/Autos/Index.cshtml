<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f4f9;
        margin: 0;
        padding: 20px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        overflow: hidden;
        background-color: #fff;
    }

        .table th, .table td {
            padding: 15px;
            text-align: left;
            border: 1px solid #ddd;
        }

        .table th {
            background-color: #4CAF50;
            color: white;
            font-size: 16px;
            text-align: center;
        }

        .table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .table td {
            text-align: center;
        }

            .table td a {
                text-decoration: none;
                color: #007BFF;
                padding: 10px 15px;
                border-radius: 5px;
                transition: background-color 0.3s, color 0.3s;
                display: inline-block;
                margin: 5px;
            }

                .table td a:hover {
                    background-color: #0056b3;
                    color: white;
                }

    .table thead tr:first-child th:first-child {
        border-top-left-radius: 10px;
    }

    .table thead tr:first-child th:last-child {
        border-top-right-radius: 10px;
    }

    .table tbody tr:last-child td:first-child {
        border-bottom-left-radius: 10px;
    }

    .table tbody tr:last-child td:last-child {
        border-bottom-right-radius: 10px;
    }

    .table td a.btn-primary {
        background-color: #007BFF;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 10px 15px;
        transition: background-color 0.3s;
    }

    .table td a.btn-info {
        background-color: #17A2B8;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 10px 15px;
        transition: background-color 0.3s;
    }

    .table td a.btn-danger {
        background-color: #DC3545;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 10px 15px;
        transition: background-color 0.3s;
    }

        .table td a.btn-primary:hover,
        .table td a.btn-info:hover,
        .table td a.btn-danger:hover {
            background-color: #0056b3;
        }
</style>

@model IEnumerable<TallerAPI.Models.Automovil>

@{
    ViewData["Title"] = "Menú";
}
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.fechaIngreso)</th>
            <th>@Html.DisplayNameFor(model => model.nombrePropietario)</th>
            <th>@Html.DisplayNameFor(model => model.marca)</th>
            <th>@Html.DisplayNameFor(model => model.modelo)</th>
            <th>@Html.DisplayNameFor(model => model.color)</th>
            <th>@Html.DisplayNameFor(model => model.anio)</th>
            <th>@Html.DisplayNameFor(model => model.numPlaca)</th>
            <th>@Html.DisplayNameFor(model => model.numVIN)</th>
            <th>@Html.DisplayNameFor(model => model.descripcionReparacion)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.fechaIngreso)</td>
                <td>@Html.DisplayFor(modelItem => item.nombrePropietario)</td>
                <td>@Html.DisplayFor(modelItem => item.marca)</td>
                <td>@Html.DisplayFor(modelItem => item.modelo)</td>
                <td>@Html.DisplayFor(modelItem => item.color)</td>
                <td>@Html.DisplayFor(modelItem => item.anio)</td>
                <td>@Html.DisplayFor(modelItem => item.numPlaca)</td>
                <td>@Html.DisplayFor(modelItem => item.numVIN)</td>
                <td>@Html.DisplayFor(modelItem => item.descripcionReparacion)</td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Detalles", "Details", new { id = item.id }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
