<style>
    .nav-link-right {
        text-align: right;
        display: block;
        margin-bottom: 20px;
    }

        .nav-link-right a {
            color: #007BFF;
            text-decoration: none;
            font-weight: bold;
            padding: 10px;
            border-radius: 4px;
            transition: background-color 0.3s, color 0.3s;
        }

            .nav-link-right a:hover {
                background-color: #f0f0f0;
                color: #0056b3;
            }

    .container {
        max-width: 800px;
        margin: 50px auto;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

        .container h3 {
            margin-bottom: 20px;
            color: #333;
            text-align: center;
        }

    .details-list {
        border-top: 1px solid #ddd;
        border-bottom: 1px solid #ddd;
        padding: 15px;
        margin-bottom: 20px;
    }

        .details-list dt {
            font-weight: bold;
            color: #555;
            margin-bottom: 10px;
        }

        .details-list dd {
            margin-bottom: 15px;
            color: #666;
        }

    .btn-danger {
        display: block;
        width: 100%;
        padding: 12px;
        background-color: #DC3545;
        border: none;
        border-radius: 6px;
        color: white;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }
</style>

@model TallerAPI.Models.Automovil

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="nav-link-right">
        <a asp-action="Index">Regresar al Menú</a>
    </div>

    <h3>¿Estás segura de que quieres eliminar el automovil?</h3>

    <div class="details-list">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.id)</dd>
            <dt class="col-sm-3">Fecha de Ingreso</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.fechaIngreso)</dd>
            <dt class="col-sm-3">Nombre del Propietario</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.nombrePropietario)</dd>
            <dt class="col-sm-3">Marca</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.marca)</dd>
            <dt class="col-sm-3">Modelo</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.modelo)</dd>
            <dt class="col-sm-3">Color</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.color)</dd>
            <dt class="col-sm-3">Año</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.anio)</dd>
            <dt class="col-sm-3">Número de Placa</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.numPlaca)</dd>
            <dt class="col-sm-3">Número VIN</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.numVIN)</dd>
            <dt class="col-sm-3">Descripción de Reparación</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.descripcionReparacion)</dd>
        </dl>
    </div>

    <form asp-action="Delete">
        <input type="submit" value="Sí, Eliminar" class="btn btn-danger" />
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
