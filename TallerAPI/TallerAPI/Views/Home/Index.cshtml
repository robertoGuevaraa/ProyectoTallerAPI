<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f4f9;
        margin: 0;
        padding: 20px;
    }

    .container {
        max-width: 800px;
        margin: 50px auto;
        padding: 30px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .display-4 {
        font-size: 3rem;
        color: #333;
        margin-bottom: 20px;
    }

    .btn-primary {
        display: inline-block;
        padding: 12px 20px;
        background-color: #007BFF;
        color: white;
        border: none;
        border-radius: 6px;
        font-size: 18px;
        text-decoration: none;
        text-align: center;
        transition: background-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        display: inline-block;
        margin-top: 20px;
        padding: 12px 20px;
        background-color: #28a745;
        color: white;
        border: none;
        border-radius: 6px;
        font-size: 18px;
        text-decoration: none;
        text-align: center;
        transition: background-color 0.3s;
    }

        .btn-secondary:hover {
            background-color: #218838;
        }
</style>

@model TallerAPI.Models.Automovil
@{
    ViewData["Title"] = "Página Principal";
}

<div class="container">
    <div class="text-center">
        <h1 class="display-4">Motor Racing Sport</h1>
        <p>Bienvenido al sistema de gestión de automóviles. Aquí puedes realizar diferentes operaciones como ingresar, editar y eliminar datos de los vehículos.</p>
        <a href="@Url.Action("Create", "Autos")" class="btn-secondary">Ingresar Nuevo Vehículo</a>
    </div>
</div>
